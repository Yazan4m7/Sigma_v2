    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"/>
<div class="SV-container">
    <div class="SV-wrapper">
        <div class="SV-image">
            <img src="" alt="">
        </div>
        <div class="SV-content">
            <div class="SV-icon">
                <i class="fas fa-cloud-upload-alt"></i>
            </div>
            <div class="SV-text">
                No file chosen, yet!
            </div>
        </div>
        <div id="cancel-btn">
            <i class="fas fa-times"></i>
        </div>
        <div class="SV-file-name">
            File name here
        </div>
    </div>
    <button id="custom-btn" type="button">Choose a file</button>
    <input id="default-btn" type="file" hidden>
</div>
<script>
    const wrapper = document.querySelector(".SV-wrapper");
    const fileName = document.querySelector(".SV-file-name");
    const defaultBtn = document.querySelector("#default-btn");
    const customBtn = document.querySelector("#custom-btn");
    const cancelBtn = document.querySelector("#cancel-btn i");
    const img = document.querySelector(".SV-wrapper .SV-image img"); // FIXED SELECTOR

    // Attach event listener to the file input
    defaultBtn.addEventListener("change", function () {
        const file = this.files[0]; // Get the selected file
        if (file) {
            console.log("File selected:", file.name);

            // Display file name
            fileName.textContent = file.name;

            // Read the file and display preview
            const reader = new FileReader();
            reader.onload = function () {
                img.src = reader.result;
                wrapper.classList.add("SV-active"); // Show image preview
                console.log("Image preview updated");
            };
            reader.readAsDataURL(file); // Convert file to data URL
        }
    });

    // Trigger file input when clicking the custom button
    customBtn.addEventListener("click", function () {
        defaultBtn.click();
    });

    // Cancel file selection and reset UI
    cancelBtn.addEventListener("click", function () {
        img.src = ""; // Clear preview
        wrapper.classList.remove("SV-active"); // Hide image preview
        fileName.textContent = "File name here"; // Reset filename
        defaultBtn.value = ""; // Clear input field
    });

</script>
@endsection
