<script>
    function selectFace(element) {
        // Remove 'silicon-valley-selected' class from all faces
        document.querySelectorAll('.silicon-valley-face').forEach(face => {
            face.classList.remove('silicon-valley-selected');

        });
        // Add 'silicon-valley-selected' class to the clicked face
        element.classList.add('silicon-valley-selected');

        // Show overlay
        document.getElementById('silicon-valley-overlay').classList.add('silicon-valley-active');
        // Simulate form submission
        setTimeout(() => {
            // Hide overlay after 3 seconds (simulate backend processing)
            document.getElementById('silicon-valley-overlay').classList.remove('silicon-valley-active');
            // Enable all faces again

        });
    }

    ,
    3000
    )

    }
</script>
